.contentList {
  position: absolute;
  width: 100%;
  top: 0;
  left: 0;
  height: 100%;
  overflow-y: auto;
}
.contentList .contentItem {
    padding: 20rpx;
    border-bottom: 1px solid #e6e6e6;
}
.contentList .contentItem .itemTop {
      padding-left: 90rpx;
      position: relative;
      margin-bottom: 30rpx;
}
.contentList .contentItem .itemTop .userName {
        font-size: 32rpx;
        color: #333;
        padding-bottom: 5rpx;
}
.contentList .contentItem .itemTop .tips {
        font-size: 26rpx;
        color: #939393;
}
.contentList .contentItem .itemTop .tips text {
          padding-right: 15rpx;
}
.contentList .contentItem .itemTop .userLogo {
        width: 70rpx;
        height: 70rpx;
        background: red;
        position: absolute;
        top: 50%;
        -webkit-transform: translateY(-50%);
            -ms-transform: translateY(-50%);
                transform: translateY(-50%);
        left: 0rpx;
}
.contentList .contentItem .contentText {
      font-size: 34rpx;
      color: #333;
}
.contentList .contentItem .contentImg {
      width: 100%;
      display: -webkit-box;
      display: -webkit-flex;
      display: -ms-flexbox;
      display: flex;
      margin: 20rpx auto;
}
.contentList .contentItem .contentImg .contentImgItem {
        width: 32%;
        overflow: hidden;
        margin-right: 1.5%;
}
.contentList .contentItem .contentImg .contentImgItem image {
          width: 100%;
}
.contentList .contentItem .contentImg .contentImgItem:nth-child(3n) {
          margin-right: 0;
}
.contentList .footer {
    font-size: 28rpx;
    border-top: 10rpx solid #e6e6e6;
    -webkit-box-shadow: 0 1px 0 0 #e6e6e6;
            box-shadow: 0 1px 0 0 #e6e6e6;
    width: 100%;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    color: rgba(40, 47, 60, 0.8);
    padding: 0 20rpx;
    line-height: 100rpx;
    height: 100rpx;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
    position: relative;
}
.contentList .footer .item {
      margin-right: 40rpx;
}
.contentList .footer .item.active {
        border-bottom: 3px solid #333333;
        color: #333;
}
.contentList .tab2 .tab2Time {
    padding: 30rpx 0 30rpx 100rpx;
    position: relative;
}
.contentList .tab2 .tab2Time .logo {
      width: 70rpx;
      height: 70rpx;
      border-radius: 50%;
      background: red;
      position: absolute;
      top: 30rpx;
      left: 20rpx;
}
.contentList .tab2 .tab2Time .contRight {
      border-bottom: 1px solid #e6e6e6;
      padding-bottom: 30rpx;
}
.contentList .tab2 .tab2Time .contRight .userName {
        font-size: 32rpx;
}
.contentList .tab2 .tab2Time .contRight .contentTxt {
        padding: 10rpx 0 15rpx;
        font-size: 36rpx;
}
.contentList .tab2 .tab2Time .contRight .contentTxtCont {
        line-height: 44rpx;
        padding: 20rpx 25rpx;
        background: #f7f7f7;
        color: #333;
        font-size: 32rpx;
        word-wrap: break-word;
        margin-right: 30rpx;
}
.contentList .tab2 .tab2Time .contRight .contentTxtCont .uname {
          color: #507DAF;
}
.contentList .tab2 .tab2Time .contRight .contentFoot {
        color: #999;
        font-size: 30rpx;
        margin-top: 20rpx;
        margin-right: 30rpx;
}
.contentList .tab2 .tab2Time .contRight .contentFoot .dz, .contentList .tab2 .tab2Time .contRight .contentFoot .pl {
          float: right;
          margin-left: 20rpx;
}
